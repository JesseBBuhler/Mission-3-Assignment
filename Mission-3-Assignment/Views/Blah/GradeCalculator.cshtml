@model Mission_3_Assignment.Models.GradeCalculatorModel;

<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments % score:</label>
    <input id="txtAssign" asp-for="assign"/> <br />
    <label>Group Project % score:</label>
    <input id="txtGroup" asp-for="group"/> <br />
    <label>Quizzes % score:</label>
    <input id="txtQuiz" asp-for="quiz"/> <br />
    <label>Exams % score:</label>
    <input id="txtExam" asp-for="exam"/> <br />
    <label>Intex % score:</label>
    <input id="txtIntex" asp-for="intex"/> <br />
    <input id="btnSubmit" type="submit" value="Submit" />

    <div asp-validation-summary="All"></div>
</form>


<script src="js/gradeCalculator.js"></script>